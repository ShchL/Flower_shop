<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".AccountFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/spaghetti"
        android:text=" p l a n t s'\n  p l a n e t "
        android:textColor="#384331"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/spaghetti"
        android:text="Личный       \nкабинет"
        android:textAlignment="textEnd"
        android:textColor="#384331"
        android:textSize="40sp"
        android:textStyle="bold" />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center">
    <Button
        android:id="@+id/btnHomePage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_lk"
        android:text="Личные данные"
        android:layout_marginTop="10dp"
        android:textColor="#384331"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="#CCAD8665" />

    <Button
        android:id="@+id/btnOrders"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_lk"
        android:text="Заказы"
        android:textColor="#384331"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="#CCAD8665" />

    <Button
        android:id="@+id/btnContacts"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_lk"
        android:text="Контакты"
        android:textColor="#384331"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="#CCAD8665" />

    <Button
        android:id="@+id/btnFlorist"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_lk"
        android:text="Добавить в каталог"
        android:textColor="#384331"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="#CCAD8665" />

    <Button
        android:id="@+id/btnAdmin"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_lk"
        android:text="Назначить права"
        android:textColor="#384331"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="#CCAD8665" />

    <Button
        android:id="@+id/btnExit"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_lk"
        android:text="Выход"
        android:textColor="#384331"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="#CCAD8665" />

</LinearLayout>

    <Button
        android:id="@+id/btnSpecial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="-300dp"
        android:background="@drawable/btn_sign_in"
        android:text="Особые возможности"
        android:textColor="#DADDE2"
        android:textSize="12sp"
        android:textStyle="bold"
        app:backgroundTint="#80384331" />

</FrameLayout>